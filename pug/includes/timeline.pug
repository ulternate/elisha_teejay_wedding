//- Include the time line mixins.
include mixins/timeline

section.cd-horizontal-timeline#the-timeline
    .timeline
        .events-wrapper
            .events
                ol
                    +timeline_event('22/06/1989', 'Jun 89')(class='selected')
                    +timeline_event('21/07/1991', 'Jul 91')
                    +timeline_event('01/08/2007', 'Aug 07')
                    +timeline_event('01/04/2010', 'Apr 10')
                    +timeline_event('15/01/2011', 'Jan 11')
                    +timeline_event('16/11/2014', 'Nov 14')
                    +timeline_event('23/02/2017', 'Feb 17')
                    +timeline_event('03/12/2017', 'Dec 17')
                    +timeline_event('15/01/2019', 'Jan 19')
                    +timeline_event('19/01/2019', 'Jan 19')
                    +timeline_event('02/02/2019', 'Feb 19')
                
                span.filling-line(aria-hidden='true')

        ul.cd-timeline-navigation
            li.hide-on-desktop
                a.prev.inactive(href='#0') Prev
            li.hide-on-desktop
                a.next(href='#0') Next

    .events-content
        ol
            +timeline_event_content('22/06/1989', 'Teejay is born', 'June 22nd, 1989')(class='selected')
                p Teejay is born on this day in London, England.
            +timeline_event_content('21/07/1991', 'Elisha is born', 'July 21st, 1991')
                p Elisha is born on this day in Perth, Australia.
            +timeline_event_content('01/08/2007', 'Teejay arrived in Australia', 'August, 2007')
                p Teejay and his family arrived in Australia.
            +timeline_event_content('01/04/2010', 'First met', 'April, 2010')
                p Elisha and Teejay first met.
            +timeline_event_content('15/01/2011', 'First Date', 'January 15th, 2011')
                p Elisha and Teejay went on their first date.
            +timeline_event_content('16/11/2014', 'Moved in together', 'November 16th, 2014')
                p Elisha and Teejay moved into their first home together.
            +timeline_event_content('23/02/2017', 'Proposal', 'February 23rd, 2017')
                p Teejay proposed in France at Euro Disneyland.
            +timeline_event_content('03/12/2017', 'Baby due', 'December 3rd, 2017')
                p Their first child is due.
            +timeline_event_content('15/01/2019', 'Wedding', 'January 15th, 2019')
                div.row
                    .col-md-6.col-sm-12.vertical-center-no-flex
                        p
                            b Location: 
                            | Maui, Hawaii
                        p 
                            b Time: 
                            | TBD
                        p 
                            b Details: 
                            | Further details to be provided soon &#x1F601;

                    .col-md-6.col-sm-12.vertical-center-no-flex
                        iframe(
                            width='100%',
                            height='300',
                            frameborder='0'
                            style='border:0',
                            src='https://www.google.com/maps/embed/v1/view?zoom=8&center=20.7984%2C-156.3319&key=AIzaSyACM0kttcdeBCHvxzJwfS6Rs7LoGknuANc',
                            allowfullscreen
                        )
            +timeline_event_content('19/01/2019', 'Celebration 1.0', 'January 19th, 2019')
                div.row
                    .col-md-6.col-sm-12.vertical-center-no-flex
                        p
                            b Location: 
                            | TBD
                        p 
                            b Time: 
                            | 7pm until late
                        p 
                            b Details: 
                            | Further details to be provided soon &#x1F601;

                    .col-md-6.col-sm-12.vertical-center-no-flex
                        iframe(
                            width='100%',
                            height='300',
                            frameborder='0'
                            style='border:0',
                            src='https://www.google.com/maps/embed/v1/place?q=Hertfordshire%2C%20England&key=AIzaSyACM0kttcdeBCHvxzJwfS6Rs7LoGknuANc',
                            allowfullscreen
                        )

            +timeline_event_content('02/02/2019', 'Celebration 2.0', 'February 2nd, 2019')
                div.row
                    .col-md-6.col-sm-12.vertical-center-no-flex
                        p
                            b Location: 
                            | Ocean Reef, Perth, Australia
                        p 
                            b Time: 
                            | 7pm until late
                        p 
                            b Details: 
                            | Please join us to celebrate the wedding. 
                            br
                            br      
                            | Gives us a chance to share our experience in Hawaii with pictures and stories with our friends and family who weren't able to join us (and those that could &#x1F601; ). 
                            br
                            br
                            | Food, drinks and entertainment will be provided.

                    .col-md-6.col-sm-12.vertical-center-no-flex
                        iframe(
                            width='100%',
                            height='300',
                            frameborder='0'
                            style='border:0',
                            src='https://www.google.com/maps/embed/v1/view?zoom=13&center=-31.9505%2C115.8605&key=AIzaSyACM0kttcdeBCHvxzJwfS6Rs7LoGknuANc',
                            allowfullscreen
                        )
